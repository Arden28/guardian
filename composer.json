{
    "name": "arden28/guardian",
    "description": "Guardian is a reusable, modular Laravel package designed to provide a comprehensive authentication system for modern web applications, specifically tailored for integration with a React frontend.",
    "keywords": [
        "arden28",
        "guardian"
    ],
    "homepage": "https://github.com/arden28/guardian",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Arden BOUET",
            "email": "laudbouetoumoussa@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "illuminate/support": "^8.0 || ^9.0 || ^10.0 || ^11.0",
        "laravel/framework": "^8.0|^9.0|^10.0",
        "laravel/socialite": "^5.0",
        "spatie/laravel-permission": "^5.0",
        "laravel/sanctum": "^3.0",
        "spomky-labs/otphp": "^10.0",
        "twilio/sdk": "^6.0|^7.0"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Arden28\\Guardian\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Arden28\\Guardian\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Arden28\\Guardian\\GuardianServiceProvider",
                "Arden28\\Guardian\\Providers\\SocialiteProvider"
            ],
            "aliases": {
                "Guardian": "Arden28\\Guardian\\GuardianFacade"
            }
        }
    }
}
